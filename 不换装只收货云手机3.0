'云手机，适用分辨率设置： 720*1280 ,1280*1920
'代码参考自nga fetztech 模拟器代码
'***********************设置区*************************
dim id=8 '指定升级建筑id，从左至右，从下到上依次为0～8
Dim si=3 '指定升级第si个政策，从左至右，从下到上依次为0～4
'***********************参数区*************************
Dim screen_x = GetScreenX(), screen_y = GetScreenY()
 '房子坐标 
Dim hx() ={180, 360, 540, 180, 360, 540, 180, 360, 540}
Dim hy() ={870, 760, 680, 690, 580, 500, 510, 400, 320}
 '小火车坐标
Dim tx() ={430, 530, 630}
Dim ty() ={1100, 1040, 980}
'功能性坐标
Dim fx()={360, 120, 630, 600, 360, 50, 180}
Dim fy()={800, 1200, 780, 1200, 1200, 100, 160}
Dim gx()={440, 590, 530} '文字区域x：更换界面文字左右边界，政策中心中线
Dim gy()={680, 1736,550, 1600, 10, 410, 700} '文字区域y
'更换界面文字上下沿，政策中心上下沿，当前政策定位点3个
Dim stix()={-210, 210, -210, 210, -210} '政策中心5项定位偏移值
Dim stiy()={140, 140, 320, 320, 500} '政策中心5项定位偏移值

'坐标变换
for j = 0 to 8
hx(j)=hx(j)*screen_x/720
hy(j)=hy(j)*screen_y/1280
tx(j)=tx(j)*screen_x/720
ty(j)=ty(j)*screen_y/1280
fx(j)=fx(j)*screen_x/720
fy(j) = fy(j) * screen_y / 1280
gx(j)=gx(j)*screen_x/1080
gy(j) = gy(j) * screen_y / 1920
stix(j)=stix(j)*screen_x/1080
stiy(j) = stiy(j) * screen_y / 1920
next
'功能性坐标定义
Dim blan = {fx(0), fy(0)} '空白处，屏幕正中心
Dim inst = {fx(1), fy(1)} '修建按钮坐标，屏幕左下
Dim edit = {fx(2), fy(2)} '编辑按钮坐标 
Dim upgr = {fx(3), fy(3)} '升级按钮坐标
Dim chan = {fx(4), fy(4)} '替换按钮坐标
Dim b = {fx(5), fy(5)} '选择区域时用到的坐标偏移量
Dim stra = {fx(6), fy(6)} '政策中心起始点
'***********************自定义函数区*************************
Function money() 	'收钱函数
Swipe hx(0),hy(0),hx(2),hy(2),100
Swipe hx(2), hy(2), hx(8), hy(8), 100
Swipe hx(8), hy(8), hx(6), hy(6), 100
Swipe hx(4),hy(4),hx(3),hy(3),100
Delay 1000 		 
End Function	 

Function upgrade(id) 	'升级指定建筑函数 	
  Tap edit(0), edit(1)
  Delay 100 	
  Tap hx(id), hy(id )  
  Delay 500 
	Tap upgr(0), upgr(1)
	Delay 300 	
  Tap edit(0), edit(1) 	
  Delay 100 
End Function


Function RestartGame() '重启游戏函数
Dim package = "com.tencent.jgm"
TracePrint "重启游戏"
Delay 500
KillApp package
Delay 1000
RunApp package
Delay 5000
End Function

'凌晨重启-注意模拟器时间要与实际之间一致
Function MidNightRestart() '凌晨重启函数
  Dim hourNow = datetime.hour()
  Dim minuteNow = datetime.minute()

  If hourNow = 0 and minuteNow <= 3 Then
TracePrint "当前时间:",hourNow,"时",minuteNow,"分,重启家国梦"
    RestartGame() '杀后台
  End If
End Function

function strategy() '升级政策函数
tap stra(0),  stra(1) '打开政策中心界面
delay 2000
tap inst(0), inst(1) *.9 ' 确定已完成的政策
delay 5000
while true ' 寻找可升级政策
 
    FindColor stra(0)*.5, 8*b(0), stra(0)*2.4, 7*b(1),  "03fe01|07fc07", 0, 0.98, stx, sty
    if stx < 0 then
        touchdown blan(0), 8*b(1)
        delay 500
        touchmove blan(0), 4.8*b(1)
        delay 300
        touchup
        delay 500
    Else 
    	FindMultiColor gx(2), gy(2), gx(2), gy(3), "FFFFFF", "0|" & gy(4) & "|FCDFAB," & "0|" & gy(5) & "|FCDFAB," & "0|" & gy(6) & "|E8E5E0", 0, 0.99, cx, cy	
    	While cx < 0
        	Delay 500
        	touchdown blan(0), 8*b(1)
        	delay 200
        	touchmove blan(0), 7*b(1)
        	delay 300
        	touchup
        	Delay 500
        	FindMultiColor gx(2), gy(2), gx(2), gy(3), "FFFFFF", "0|" & gy(4) & "|FCDFAB," & "0|" & gy(5) & "|FCDFAB," & "0|" & gy(6) & "|E8E5E0", 0, 0.99, cx, cy
        Wend       
        tap cx+stix(si), cy+stiy(si) '选择第一个可升级项
        delay 1000
        tap blan(0), 8*b(1) ' 升级
        delay 500
		tap inst(0), inst(1) '退出政策界面
		delay 500
		tap inst(0), inst(1) '退出政策界面
    	exit while
    end if
wend
End Function

'主程序
 While True
 	Dim cx, cy, cx1, cy1, stx, sty,res, n = 1, iter = 60
    While n < iter
        MidNightRestart()     
        delay 1000 
        FindColor stra(0), stra(1)- 0.3*b(1), stra(0)+b(0), stra(1) + 0.3*b(1), "00d900" , 0, 0.98, stx, sty
        if stx > -1 then
            strategy()
        end if
        FindColor tx(0)-b(0), ty(0) -b(1), tx(0), ty(0) - 0.5*b(1),  "EAC254|FF989A|3CC1FF", 1, 1, cx1, cy1
        If cx1<0 And cy1< 0  Then
 			If n =  1 Then
                tap inst(0), inst(1)  '增加容错率，防止 弹出 通知 卡死
				money ()'收钱,注释掉此行后不进行收钱             
			    upgrade (id) '升级建筑，注释掉此行后不进行升级
 			Else
 			End If
 		Else
 			res = loadtrain() '卸货
 			If res = 1 Then  	
  	        RestartGame() '重新登陆
 			End If
 		End If
 		n = n + 1
 	Wend
Wend

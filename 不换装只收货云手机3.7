Function money() 	'收钱函数
	Swipe hx(0)*2.5- hx(1)*1.5,hy(0)*2.5- hy(1)*1.5,hx(2)*2- hx(1),hy(2)*2- hy(1),600
	Delay 200 		 
	Swipe hx(5)*2- hx(4),hy(5)*2- hy(4),hx(3)*2- hx(4),hy(3)*2- hy(4), 600	
	Delay 200 		 
	Swipe hx(6)*2- hx(7),hy(6)*2- hy(7),hx(8)*2- hx(7),hy(8)*2- hy(7), 600
	Delay 1000 		 
End Function

Function upgrade(id) 	'升级指定建筑函数 	
	Tap edit(0), edit(1)
	Delay 100 	
	Tap hx(id), hy(id )  
	Delay 500 
	Tap upgr(0), upgr(1)
	Delay 300 	
	Tap edit(0), edit(1) 	
	Delay 100 
End Function

Function RestartGame() '重启游戏函数
	Dim package = "com.tencent.jgm"	
	ShowMessage "重启家国梦"
//	TracePrint "当前时间:",datetime.hour(),"时",datetime.hour(),"分,重启家国梦"
//	Call File.Append(FileName,datetime.hour()&":"&datetime.minute()&":"&datetime.second()&",重启家国梦"& chr(10))
	KillApp package
	Delay 1000
	RunApp package
	Delay 16000
	FindColor stu(0)*.88, stu(1)*.98, stu(0)*1.08, stu(1)*1.01, "FFBF33", 1, 0.98, cx, cy
 	If cx > -1 and cy > -1 Then 
		ShowMessage "有点卡，稍等一会"
//		TracePrint "有点卡，稍等一会"
		Delay 5000
		Else 		
		ShowMessage "顺利重启"
//		TracePrint "顺利重启"
	End If
    tap inst(0), inst(1)  '增加容错率，防止 弹出 通知 卡死
    delay 500
    tap inst(0), inst(1)  '增加容错率，防止 弹出 通知 卡死
    delay 500
End Function

